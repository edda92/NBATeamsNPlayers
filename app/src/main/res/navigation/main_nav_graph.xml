<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/teamsFragment">

    <fragment
        android:id="@+id/playerDetailFragment"
        android:name="com.mohamed.nbateamsandplayers.ui.fragments.PlayerDetailFragment"
        android:label="player_detail_fragment"
        tools:layout="@layout/player_detail_fragment" >
    </fragment>
    <fragment
        android:id="@+id/playersFragment"
        android:name="com.mohamed.nbateamsandplayers.ui.fragments.PlayersFragment"
        android:label="players_fragment"
        tools:layout="@layout/players_fragment" >
        <action
            android:id="@+id/action_playersFragment_to_playerDetailFragment"
            app:destination="@id/playerDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/teamsFragment"
        android:name="com.mohamed.nbateamsandplayers.ui.fragments.TeamsFragment"
        android:label="teams_fragment"
        tools:layout="@layout/teams_fragment" >
        <action
            android:id="@+id/action_teamsFragment_to_playersFragment"
            app:destination="@id/playersFragment" />
    </fragment>
</navigation>